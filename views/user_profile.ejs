<link rel="stylesheet" href="/css/user.css">
<div class="main">
    
    
    <%if (locals.user.id == user_profile.id){%>
        <img src="<%= user.avatar%>" alt="<%= user.name%>" width="100" height="100">
        <br>
        <%=user.email%>  <br>
        <%= user.name%>
        <br>
        <br>
        <form action="/user/update/<%= user_profile.id%>" method="post" enctype="multipart/form-data">
            <input type="text" name="name"  placeholder="Your User Name" required id="">
            <input type="email" name="email"  placeholder="Your Email" required id="">
            <input type="file" name="avatar" placeholder="Profile Picture" id="">
            <input type="submit" value="submit">
        </form>
    <%}else{%>
        <img src="<%= user_profile.avatar%>" alt="<%= user_profile.name%>" width="100" height="100">
        <br>
        <%= user_profile.name%> <br>
        <%= user_profile.email%>   <br>


    <%}%>
</div>