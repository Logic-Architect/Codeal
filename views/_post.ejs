<li>
    <p>
        <%if (locals.user && locals.user.id==i.user.id){%>
            <small>
                <a href="/post/destroy/<%= i.id%>">X</a>
            </small>    
        <%}%>
        <%= i.content%>
            <br>
            <small>
               <%= i.user.name%>
            </small>
    </p>
    <!-- COMMENT FORM  -->
    <%if (locals.user){%>
        <form action="/comments/create" id="new-comment-form" method="post">
            <h4>Comment</h4>
            <textarea name="content" id="" cols="50" rows="2" placeholder="Comments ..."
                required></textarea>
            <input type="hidden" name="post" value="<%=i.id%>">
            <input type="submit" value="Comment">
        </form>
    <%}%>
           <!-- DISPLAYING COMMENTS  -->
            <div class="post-comment-list">
                <ul id="post-comments">
                   <!-- ALL COMMENTS OF EVERY POST SHOULD GET DISPLAYED TO ALL USER  -->
                    <%for (j of i.comment){%>
                        <%-include('_comment')-%>
                    <%}%>
                </ul>
            </div>
</li>